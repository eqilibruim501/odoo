<odoo>
    <record model="ir.actions.server" id="ir_consignation_setup">
        <field name="name">Sale Order setup : Fill type_id with normal order</field>
       <field name="model_id" ref="base.model_ir_actions_server"/>
        <field name="binding_model_id" ref="base.model_ir_actions_server" />
        <field name="state">code</field>
        <field name="code">
env.cr.execute("""
  update sale_order
set type_id = 1
where type_id IS NULL
""")
        </field>
    </record>
</odoo>
